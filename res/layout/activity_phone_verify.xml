<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/allbackground"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/tv_phone_verify_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/title_back"
            android:gravity="center"
            android:text="注 册"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btn_phone_verify_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_backtrack"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_phone_num"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext_phone_enroll"
        android:cursorVisible="true"
        android:gravity="center"
        android:maxLength="11"
        android:hint="输入手机号码"
        android:phoneNumber="true" 
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_gain_auth"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_background"
        android:text="获取验证码"
        android:textColor="@color/text_color" />

</LinearLayout>