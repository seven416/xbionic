<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bg">
    
    <ImageView
        android:id="@+id/img_enroll_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_back" />
    
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="注 册"
        android:textColor="#cccccc"
        android:textSize="25sp" />
    
    <Button android:id="@+id/btn_sina_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:layout_below="@id/img_enroll_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="新浪微博验证注册"
        android:textColor="@color/text_color"/>
    
    <Button android:id="@+id/btn_qq_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:layout_below="@id/btn_sina_enroll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="腾讯账号验证注册"
        android:textColor="@color/text_color"/>
    
    
    <Button android:id="@+id/btn_phone_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:layout_below="@id/btn_qq_enroll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="使用手机注册"
        android:textColor="@color/text_color"/>

    <ImageButton
        android:id="@+id/btn_backtrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/tv_title"
        android:background="@drawable/btn_backtrack" />

</RelativeLayout>
