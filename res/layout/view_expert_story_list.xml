<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp" >

    <ImageView
        android:id="@+id/iv_expert_story_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/maintrademark" />

    <TextView
        android:id="@+id/tv_expert_story_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_expert_story_img"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:text="xxxxx" />

    <TextView
        android:id="@+id/tv_expert_story_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_expert_story_title"
        android:layout_below="@id/tv_expert_story_title"
        android:layout_marginTop="25dp"
        android:textColor="#E1E6F6"
        android:text="xxxxx" />

</RelativeLayout>